{% extends 'base.html.twig' %}

{% block title %}Administration :: SPORTY{% endblock %}

{% block body %}

  {{ include('parts/_header.html.twig') }}

  <main>
    <nav aria-label="breadcrumb breadcrumb-shadow">
      <ol class="breadcrumb ms-2">
        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Administration</a></li>
        <li class="breadcrumb-item active" aria-current="page">Partenaire modifié</li>
      </ol>
    </nav>

    <h2 class="ms-3 me-3 mb-3">Partenaire modifié avec succès</h2>

    <section class="ms-3 me-3">
      <div class="alert alert-success mb-2 p-2">
        Le partenaire de {{ partner.city }} a bien été modifié. Vous le retrouverez dans votre espace administrateur.
      </div>
      <div class="text-center mt-4">
        <a class="btn btn-danger w-50" href="{{ path('app_admin_show_partner', {'id': partner.id}) }}">Retour</a>
      </div>
    </section>
  </main>

  {{ include('parts/_footer.html.twig') }}

{% endblock %}